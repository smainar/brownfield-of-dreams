<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>
  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>

  <section>
    <h1>Bookmarked Segments</h1>
  </section>

  <% if !current_user.github_user_id  %>
    <%= link_to "Connect to Github", "/auth/github" %>
  <% else %>
    <section id="github">
      <h1>Github</h1>

      <h3>Github Repos</h3>
      <% facade.user_repos.each do |repo| %>
        <ul class="github-repos">
          <li><%= link_to repo.name, repo.url %></li>
        </ul>
      <% end %>
    </section>

    <h3>Followers</h3>
    <section>
      <% facade.user_github_followers.each do |follower| %>
        <ul class="github-followers">
          <li><%= link_to follower.handle, follower.url %></li>
        </ul>
      <% end %>
    </section>

    <h3>Following</h3>
    <section>
      <% facade.user_github_following.each do |follow| %>
        <ul class="github-following">
          <li><%= link_to follow.handle, follow.url %></li>
        </ul>
      <% end %>
    </section>
    <% end %>
  </section>
